<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <ImageView
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginTop="26dp"
        android:contentDescription="logo"
        android:src="@drawable/ic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="注册E棒棒账号"
        android:textColor="@color/app_status_bar_color"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/layer_list_bottom_line"
        android:hint="手机号"
        android:inputType="phone"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/layer_list_bottom_line">

        <EditText
            android:id="@+id/et_identifying_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_get_identifying_code"
            android:layout_width="77dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_round_rectangle_15dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>


    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/layer_list_bottom_line"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/layer_list_bottom_line"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="239dp"
        android:layout_height="39dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/shape_login_button_bg"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="icon"
            android:src="@drawable/ic_register_icon1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="注册账号即表示您同意并愿意遵守E棒棒"
            android:textColor="@color/black3"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="用户协议"
            android:textColor="@color/app_status_bar_color"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/black3"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="隐私政策"
            android:textColor="@color/app_status_bar_color"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>