<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:elevation="3dp"
    tools:ignore="HardcodedText">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:includeFontPadding="false"
        android:text="西工区 (农家川菜馆)"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="17dp"
        android:layout_height="19dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="image"
        android:src="@drawable/ic_cancel" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/tv_lunch_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_container"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="餐盒"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_box_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_container"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="¥3"
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lunch_box"
        android:layout_alignStart="@id/tv_lunch_box"
        android:layout_marginTop="28dp"
        android:text="已享受满减 优惠7元"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btn_settle_accounts"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_below="@id/tv_box_price"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:background="#b73432"
        android:text="去结算"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lunch_box"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@id/btn_settle_accounts"
        android:text="合计:¥43.9"
        android:textColor="@color/red"
        android:textSize="15sp" />

</RelativeLayout>