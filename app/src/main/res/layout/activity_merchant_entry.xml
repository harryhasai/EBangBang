<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="HardcodedText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_classification_list_bg"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layer_list_bottom_line1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:text="申请人"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layer_list_bottom_line1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:text="联系电话"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layer_list_bottom_line1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:text="验证码"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layer_list_bottom_line1"
                        android:hint="请输入姓名"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black3"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layer_list_bottom_line1"
                        android:hint="请输入电话号码"
                        android:inputType="phone"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black3"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_verification_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/layer_list_bottom_line1"
                            android:hint="请输入验证码"
                            android:inputType="number"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black3"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_verification_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layer_list_bottom_line1"
                            android:paddingTop="15dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="15dp"
                            android:text="获取验证码"
                            android:textColor="@color/app_status_bar_color" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_classification_list_bg"
                android:elevation="3dp"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺名称"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@null"
                        android:hint="请输入店铺名称"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black3"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经营品类"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_shop_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="点击选择"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black3"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在城市"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_shop_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="点击选择"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black3"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺地址"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_shop_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="填写详细地址"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black3"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_shop_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:paddingEnd="8dp"
                        android:src="@drawable/ic_location_bg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送方法"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_method"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请选择配送方式"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black3"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_classification_list_bg"
                android:elevation="3dp"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/shop_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="门头图片"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/shop_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/shop_text1"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/shop_text1"
                        android:text="上传门头照片"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_shop_img1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/shop_text2"
                        android:layout_alignStart="@id/shop_text2"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_add_img" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/shop_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店内图片"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/shop_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/shop_text3"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/shop_text3"
                        android:text="上传店内环境照片"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_shop_img2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/shop_text4"
                        android:layout_alignStart="@id/shop_text4"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_add_img" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/shop_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺LOGO"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/shop_text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/shop_text5"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/shop_text5"
                        android:text="上传店铺LOGO"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_shop_img3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/shop_text6"
                        android:layout_alignStart="@id/shop_text6"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_add_img" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_classification_list_bg"
                android:elevation="3dp"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/shop_text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法人身份证"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/shop_text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/shop_text7"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/shop_text7"
                        android:text="需拍摄法人手持身份证"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_shop_img4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/shop_text8"
                        android:layout_alignStart="@id/shop_text8"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_add_img" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/shop_text9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业执照"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/shop_text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/shop_text9"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/shop_text9"
                        android:text="需文字清晰, 边框完整, 露出国徽"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_shop_img5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/shop_text10"
                        android:layout_alignStart="@id/shop_text10"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_add_img" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/shop_text11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="许可证"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/shop_text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/shop_text11"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/shop_text11"
                        android:text="可用餐饮服务许可证, 食品流通许可证"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_shop_img6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/shop_text12"
                        android:layout_alignStart="@id/shop_text12"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_add_img" />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="239dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_submit_button_bg"
                android:text="提交申请"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>