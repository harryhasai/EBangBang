<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_list_bottom_line1"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/iv_food_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="image"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_food" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_food_img"
        android:includeFontPadding="false"
        android:text="酸辣牛肉面"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_food_name"
        android:layout_alignBottom="@id/iv_food_img"
        android:includeFontPadding="false"
        android:text="¥6"
        android:textColor="@color/red"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_food_sales_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:includeFontPadding="false"
        android:text="月售2"
        android:textSize="13sp" />

</RelativeLayout>