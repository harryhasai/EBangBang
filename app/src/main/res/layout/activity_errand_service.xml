<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rtv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/app_status_bar_color">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="19dp"
                android:contentDescription="image"
                android:rotation="180"
                android:src="@drawable/ic_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="跑腿服务"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_errand_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_errand_list" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:elevation="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fl_send_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/layer_list_bottom_line1"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="发件地址"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.ruffian.library.RTextView
                android:id="@+id/tv_send_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|end"
                android:includeFontPadding="false"
                android:textColor="@color/black1"
                android:textSize="15sp"
                rtv:icon_direction="right"
                rtv:icon_height="13dp"
                rtv:icon_src_normal="@drawable/ic_arrow_right1"
                rtv:icon_width="7dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fl_receive_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/layer_list_bottom_line1"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="收件地址"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.ruffian.library.RTextView
                android:id="@+id/tv_receive_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|end"
                android:includeFontPadding="false"
                android:textColor="@color/black1"
                android:textSize="15sp"
                rtv:icon_direction="right"
                rtv:icon_height="13dp"
                rtv:icon_src_normal="@drawable/ic_arrow_right1"
                rtv:icon_width="7dp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/layer_list_bottom_line1"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="物品重量(Kg)"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.ruffian.library.RTextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/black1"
                android:textSize="15sp"
                rtv:icon_direction="right"
                rtv:icon_height="13dp"
                rtv:icon_src_normal="@drawable/ic_arrow_right1"
                rtv:icon_width="7dp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:elevation="3dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/layer_list_bottom_line1"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="备注(物品描述或者要求)"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/black1"
                android:textSize="15sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/layer_list_bottom_line1"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="取件时间"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.ruffian.library.RTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/black1"
                android:textSize="15sp"
                rtv:icon_direction="right"
                rtv:icon_height="13dp"
                rtv:icon_src_normal="@drawable/ic_arrow_right1"
                rtv:icon_width="7dp" />

        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_submit_button_bg"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:text="提交订单"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@id/tv_submit"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/tv_price"
                android:text="配送费"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>